<div class="user-flex">
  <img class="icon-picture" src="{{user.imgPath}}" alt="icon-profile">
  <div class="name-user">
    <h1 class="name">{{user.username}}</h1>
    {{#if isOwner}}
    <a href="/user/owner/add" class="anchor-black">Add boat</a>
    <a href="/user/owner/myBoats" class="anchor-black">My boats</a>
    {{/if}}
  </div>
</div>

<div class="form-search">
  {{!-- <form action="/user/search/" method="POST"> --}}
  <div class="form-group">
    <label for="homeport-list">Home port</label>
    <select name="port_id" class="form-control" id="homeport-list">
      <option>Select</option>
      {{#each ports}}
      <option value='{{_id}}'>{{name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="destinationport-list">Destination port</label>
    <select name="port_id" class="form-control" id="destinationport-list">
      <option>Select</option>
      {{#each ports}}
      <option value='{{_id}}'>{{name}}</option>
      {{/each}}
    </select>
  </div>
  <div>
    <label for="date-from-input">From</label><br>
    <input name="date" type="date" id="date-from-input" class="date">
  </div>
  <div>
    <label for="date-to-input">To</label><br>
    <input name="date" type="date" id="date-to-input" class="date">
  </div>
  <div class="form-group">
    <label for="type-input">Type</label>
    <select name="type" class="form-control" id="type-input" required="true">
      <option disabled="selected">Select on option</option>
      <option>Yacht</option>
      <option>Sailboat</option>
      <option>Catamaran</option>
    </select>
  </div>
  <div class="form-group">
    <label for="capacity-input">Capacity</label>
    <input name="capacity" type="number" class="form-control" id="capacity-input" required="true">
  </div>

  <button type="submit" class="btn btn-dark btn-search" id="elboton">Search</button>
  {{!-- </form> --}}
</div>

<figure id="map" class="map"></figure>


<div>
  <h1 class="boats">Boats</h1>
  {{!-- Pintamos los barcos con DOM (ver -> main.js) --}}
  <div id="boatsList" class="dom"></div>
</div>