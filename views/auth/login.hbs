<h2>Login</h2>

<form action="/auth/login" method="POST" id="form-container">
  <label for="username-input">Username</label>
  <input id="username-input" type="text" name="username" placeholder="JohnHancock">

  <br><br>

  <label for="password-input">Password</label>
  <input id="password-input" type="password" name="password" placeholder="Your password">
  <br>
  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <a href="/profile">Login</button>

  <p class="account-message">
    Don't have an account yet?
    <a href="/auth/signup">Signup</a>
  </p>
</form>