<section class="box">
  <h2>Signup</h2>

  <form action="/auth/signup" method="POST" enctype="multipart/form-data" id="form-container">
    <label for="username-input">Username</label>
    <input id="username-input" type="text" name="username" placeholder="Username">



    <label for="password-input">Password</label>
    <input id="password-input" type="password" name="password" placeholder="">

    <label for="email-input"> Email</label>
    <input id="email-input" type="email" name="email" placeholder="johnhancockw@ironhack.com">

    <label for="role-input">Who are you?</label>
    <select name="role" id="role-input">
      <option value="RENTER">Renter</option>
      <option value="OWNER">Owner</option>
    </select>


    <label for="menu-input">Profile Picture</label>
    <input id="menu-input" type="file" name="photo" placeholder="" required></article>
    <br>
    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}



    <button>Create account</button>

    <p class="account-message">
      Do you already have an account?
      <a class="link" href="/auth/login">Login</a>
    </p>
  </form>
</section>